function updatePrice() {
  const from = document.getElementById("from").value;
  const to = document.getElementById("to").value;
  const passenger = document.getElementById("passenger").value;
  const qty = Number(document.getElementById("quantity").value);

  if (from === to) {
    document.getElementById("price").value = "";
    document.getElementById("total").value = "";
    return;
  }

  const found = priceTable.find(p =>
    p.from === from && p.to === to && p.type === passenger
  );

  if (found) {
    document.getElementById("price").value = found.price.toLocaleString();
    document.getElementById("total").value =
      (found.price * qty).toLocaleString();
  }
}

async function saveData() {
  const payload = {
    id: document.getElementById("id").value,
    passenger: document.getElementById("passenger").value,
    from: document.getElementById("from").value,
    to: document.getElementById("to").value,
    quantity: document.getElementById("quantity").value,
    price: Number(document.getElementById("price").value.replace(/,/g,"")),
    total: Number(document.getElementById("total").value.replace(/,/g,""))
  };

  await fetch(WEB_APP_URL, {
    method: "POST",
    body: JSON.stringify(payload)
  });

  alert("Saved successfully");
 // ✅ CLEAR FORM AFTER SAVE
  document.getElementById("quantity").value = 1;
  document.getElementById("price").value = "";
  document.getElementById("total").value = "";
}
</script>

